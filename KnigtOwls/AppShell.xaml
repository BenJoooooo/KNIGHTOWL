<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="KnigtOwls.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:KnigtOwls.Pages"
    Shell.FlyoutBehavior="Disabled">

    <Shell.FlyoutHeader>
        <VerticalStackLayout>
            <Label Text="Flyout Header" TextColor="white" HorizontalTextAlignment="Center"></Label>
        </VerticalStackLayout>
    </Shell.FlyoutHeader>
    
    <ShellContent
        ContentTemplate="{DataTemplate pages:MainPage}"
        Route="MainPage" />
    <!--Title="Knight Owl"-->

    <ShellContent
        ContentTemplate="{DataTemplate pages:FormPage}"
        Route="FormPage" />
    <!--Title="Report a crime"-->

</Shell>
